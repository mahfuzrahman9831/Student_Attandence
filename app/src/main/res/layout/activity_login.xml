<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="20dp"
    android:orientation="vertical"
    android:background="@drawable/backgroundgradient"
    tools:context=".LoginActivity">


    <ImageView
        android:layout_gravity="center"
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:layout_marginBottom="50dp"
        android:src="@drawable/clg_logo"
        android:layout_marginTop="40dp"
        />

    <EditText
        android:id="@+id/loginEmailEditTextId"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="10dp"
        android:autoSizeMaxTextSize="2dp"
        android:autoSizeTextType="uniform"
        android:background="@drawable/coursename"
        android:ems="18"
        android:hint="Email"
        android:textAlignment="center"
        android:inputType="textEmailAddress"
        android:padding="20dp"
        android:drawableLeft="@drawable/ic_person_black_24dp"
        android:paddingLeft="10dp"
        android:paddingRight="10dp"
        android:textColorHint="#2327E7" />

    <EditText
        android:id="@+id/loginPasswordEditTextId"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="20dp"
        android:autoSizeMaxTextSize="2dp"
        android:autoSizeTextType="uniform"
        android:background="@drawable/coursename"
        android:ems="18"
        android:hint="Password"
        android:textAlignment="center"
        android:drawableLeft="@drawable/ic_lock_black_24dp"
        android:inputType="numberPassword"
        android:padding="20dp"
        android:paddingLeft="10dp"
        android:paddingRight="10dp"
        android:textColorHint="#2327E7" />

    <Button
        android:id="@+id/loginButtonId"
        android:layout_marginTop="25dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginBottom="-108dp"
        android:background="@drawable/button_effect"
        android:padding="20dp"
        android:text="Login" />

    <TextView
        android:id="@+id/signUpTextViewId"
        android:textSize="17sp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="140dp"
        android:layout_gravity="center_horizontal"
        android:textColor="#2327E7"
        android:text="Are you not registered yet? Sign Up Here." />


</LinearLayout>